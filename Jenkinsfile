pipeline
{
    agent any

    stages {

        stage('Build') {
            steps {
                echo "Building the app"
                echo "Application is built successfully"
            }
        }

        stage('Test') {
            steps {
                echo "Testing the app"
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying the app"
            }
        }
    }
}